{
	"manifest_version": 3,
	"name": "My AI",
	"version": "1.0.0",
	"description": "Select text content and AI it!",
	"icons":{
    "16": "icons/icon1.png"
    // "32": "icons/icon2.png",
    // "48": "icons/icon3.png",
    // "128": "icons/icon4.png"
	},
	
	"permissions":[
		"storage",
		"contextMenus",
		"scripting",
		"activeTab",
		"sidePanel"
	],

	"host_permissions":[
		"<all_urls>"
	],

	"background":{
		"service_worker":"background.js"
	},

	"content_scripts":[
		{
			"matches":["<all_urls>"],
			"js":["content.js"],
			"css":["styles/floating.css"]
		}
	],

	"action":{
		"default_popup":"popup/popup.html",
		"default_icon":{
			"16":"icons/icon1.png"
			// "32":"icons/icon2.png"
		}
	},

	"side_panel":{
		"default_path":"sidepanel/sidepanel.html"
	}
}